<resources>

    <!-- Base application theme. -->

    <style name="Theme.MyApp.Main" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="android:statusBarColor">#BF6991</item>
    </style>

    <style name="Theme.MyApp.Toolbar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цвета тулбара -->
        <item name="colorPrimary">#BF6991</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Цвет фона тулбара -->
        <item name="toolbarStyle">@style/Widget.MyApp.Toolbar</item>
    </style>

    <style name="Widget.MyApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:popupTheme">@style/ThemeOverlay.Material3.Light</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#F2BF5E</item>
    </style>
    <style name="NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">



    <item name="backgroundTint">#BF6991</item>
        <item name="android:state_selected">true</item>
        <item name="android:color">#FFFFFFFF </item>
    </style>
    <style name="EditText" parent="Widget.MaterialComponents.TextView">
        <item name="backgroundTint">#BF6991</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Switcher" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
        <item name="thumbTint">#F2BF5E</item>

        <item name="trackTint">#BF6991</item>
    </style>


</resources>
