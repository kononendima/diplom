<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/activity_sign_id_EditTextLogin"
        style="@style/EditText"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="264dp"
        android:ems="10"
        android:hint="Login"
        android:inputType="textPersonName"
        android:text="admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_sign_id_EditTextPassword"
        style="@style/EditText"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="332dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:text="admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_sign_id_btnEntrance"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="468dp"
        android:visibility="visible"
        android:text="Войти"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_sign_in_textViewRegistration"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="392dp"
        android:text="Еще на зарегестрировались? \n          Сделайте это здесь"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_sign_in_textViewError"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/activity_sign_id_EditTextLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

</androidx.constraintlayout.widget.ConstraintLayout>