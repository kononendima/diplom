<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textEmail"
        android:text="email@example.com"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textSteps"
        android:text="10000 шагов"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/weightContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/buttonWeightMinus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="−"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editWeight"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginHorizontal="8dp" />

        <Button
            android:id="@+id/buttonWeightPlus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textCalories"
        android:text="1500 ккал"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textVolume"
        android:text="1500 мл"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMyRecipes"
        android:text="Мои рецепты"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMyNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мои заметки"
        style="@style/MyButton"
        android:layout_marginTop="12dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogout"
        android:text="Выйти"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>